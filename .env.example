# Financial Project - Environment Configuration Template
# Copy this file to .env and fill in your values

# ======================
# OpenAI Configuration
# ======================
OPENAI_API_KEY=

# ======================
# Application Settings
# ======================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# ======================
# FastAPI Configuration
# ======================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=60

# ======================
# Database (if needed in future)
# ======================
# DATABASE_URL=postgresql://user:password@localhost/db_name
# REDIS_URL=redis://localhost:6379

# ======================
# Security
# ======================
SECRET_KEY=your-secret-key-here-min-32-chars
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ORIGINS=http://localhost:8501,https://yourdomain.com

# ======================
# Streamlit Configuration
# ======================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_LOGGER_LEVEL=info
STREAMLIT_SERVER_HEADLESS=true

# ======================
# Monitoring & Logging
# ======================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# ======================
# Email Configuration (for alerts/notifications)
# ======================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=admin@yourdomain.com

# ======================
# Model & Data Paths
# ======================
MODEL_PATH=/app/models/credit_model.pkl
DATA_PATH=/app/data/processed_credit.csv

# ======================
# Cloud Storage (optional)
# ======================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=credit-score-bucket

# ======================
# LLM Configuration
# ======================
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500
LLM_MODEL=gpt-3.5-turbo
